<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">oracle.jdbc.driver.OracleDriver</property>
        <property name="hibernate.connection.url">jdbc:oracle:thin:@localhost:1521:xe</property>
        <property name="hibernate.connection.username">mockapi</property>
        <property name="hibernate.connection.password">123456</property>
        <property name="hibernate.connection.pool_size">64</property>
        <property name="hibernate.current_session_context_class">thread</property>
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.dialect">org.hibernate.dialect.Oracle12cDialect</property>
        <mapping class="com.mockapi.mockapi.model.Employee"/>
        <mapping class="com.mockapi.mockapi.model.News"/>
        <mapping class="com.mockapi.mockapi.model.NewsCategory"/>
        <mapping class="com.mockapi.mockapi.model.TeamProjectPK"/>
        <mapping class="com.mockapi.mockapi.model.Team"/>
        <mapping class="com.mockapi.mockapi.model.EmployeeIHPK"/>
        <mapping class="com.mockapi.mockapi.model.Issues"/>
        <mapping class="com.mockapi.mockapi.model.Issues_History"/>
        <mapping class="com.mockapi.mockapi.model.Role"/>
        <mapping class="com.mockapi.mockapi.model.Position"/>
        <mapping class="com.mockapi.mockapi.model.Department"/>
        <mapping class="com.mockapi.mockapi.model.Status_Type"/>
        <mapping class="com.mockapi.mockapi.model.Status"/>
        <mapping class="com.mockapi.mockapi.model.ABSENT"/>
        <mapping class="com.mockapi.mockapi.model.Project"/>
        <mapping class="com.mockapi.mockapi.model.Employee_Issue"/>
        <mapping class="com.mockapi.mockapi.model.TeamProject"/>
        <mapping class="com.mockapi.mockapi.model.FileResponse"/>
    </session-factory>
</hibernate-configuration>
